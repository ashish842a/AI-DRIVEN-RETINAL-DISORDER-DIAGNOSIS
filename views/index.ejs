 <!-- Script for diagnosis simulation -->
 <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

 <script>
  document.addEventListener('DOMContentLoaded', function() {
    const diagnosisForm = document.getElementById('diagnosisForm');
    const diagnosisReport = document.getElementById('diagnosisReport');
    const reportContent = document.getElementById('reportContent');
    const diagnosisChart = document.getElementById('diagnosisChart').getContext('2d');
  
    diagnosisForm.addEventListener('submit', function(event) {
      event.preventDefault();
  
      diagnosisReport.style.display = 'block';
      reportContent.innerText = 'Diagnosis in progress... Please wait.';
  
      setTimeout(() => {
        const randomNumber = Math.random();
        let diagnosisResult;
  
        if (randomNumber < 0.3) {
          diagnosisResult = 'No signs of retinal disorders';
        } else if (randomNumber < 0.7) {
          diagnosisResult = 'MACULAR EDEMA';
        } else {
          diagnosisResult = 'DIABETIC RETINOPATHY';
        }
  
        reportContent.innerText = `Diagnosis complete! ${diagnosisResult} detected.`;
  
        // Update chart
        updateChart(diagnosisResult);
      }, 2000);
    });
  
    function updateChart(result) {
      let data = {
        labels: ['No disorder', 'MACULAR EDEMA', 'DIABETIC RETINOPATHY'],
        datasets: [{
          label: 'Diagnosis Result',
          backgroundColor: ['#36a2eb', '#ffcc29', '#ff6384'],
          data: [0, 0, 0]
        }]
      };
  
      switch (result) {
        case 'No signs of retinal disorders':
          data.datasets[0].data[0]++;
          break;
        case 'MACULAR EDEMA':
          data.datasets[0].data[1]++;
          break;
        case 'DIABETIC RETINOPATHY':
          data.datasets[0].data[2]++;
          break;
        default:
          break;
      }
  
      if (window.myPieChart) {
        window.myPieChart.destroy();
      }
  
      window.myPieChart = new Chart(diagnosisChart, {
        type: 'pie',
        data: data,
        options: {
          responsive: true,
          legend: {
            position: 'top',
          },
          title: {
            display: true,
            text: 'Diagnosis Distribution'
          },
          animation: {
            animateScale: true,
            animateRotate: true
          }
        }
      });
    }
  });
  
 </script>

